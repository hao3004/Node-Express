extends ../layouts/main

block users
    div.text-center
        img(src="data:image/png;base64,")
        h1.user-list-title User List
        img(src="data:image/png;base64,")
    form(action="/users/search", method="GET", class="float-left")
        .input-group.mb-3
            input.form-control(type='text', name="keyw", placeholder='Name', value=keyw?keyw:'', aria-describedby='basic-addon2')
            .input-group-append
                button.btn.btn-outline-primary(type='button') Search
    a(href="/users/create", class="float-right") Create a new one !
    table.table.table-striped.table-dark.table-bordered.table-hover.users-table
        tr
            th Name
            th Phone
            th Option
        each user in users
            tr
                td= user.name
                td= user.phone
                td
                    a(href='users/' + user.id, class="btn btn-success" ) View
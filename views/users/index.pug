extends ../layouts/main

block users
    h1 User

    form(action="/users/search", method="GET")
        input(type="text", name="keyw")
        button(class="btn btn-success") Search

    ul
    each user in users
        li
            span= user.name
            span &nbsp;
            a(href='users/' + user.id ) View

    a(href="/users/create") Create a new one !